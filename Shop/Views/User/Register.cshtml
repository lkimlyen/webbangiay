@model Shop.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="section">
    <div class="section-title"><h1>@ViewBag.Title</h1></div>
</div>
<div class="section">

    @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Email: </label>
            <div class="col-md-10">
                <input class="form-control" required="required" type="text" style="width: 300px" name="Email" id="Email" />
            </div>
        </div>
        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Password: </label>
            <div class="col-md-10" >
                <input class="form-control" type="password" required="required" style="width: 300px" name="password1" id="password1" />
            </div>
        </div>
        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Confirm Password: </label>

            <div class="col-md-10" >
                <input class="form-control" type="password" style="width: 300px" required="required" name="password2" id="password2" />
            </div>
        </div>
        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Name: </label>
            <div class="col-md-10">
                <input class="form-control" type="text" style="width: 300px" required="required" name="name" id="name" />
            </div>
        </div>

        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Address: </label>

            <div class="col-md-10">
                <input class="form-control" type="text" style="width: 300px" name="address" required="required" id="address" />
            </div>
        </div>
        <div class="form-group" style="margin-left: 300px">
            <label class="col-md-2 control-label">Phone Number: </label>

            <div class="col-md-10">
                <input class="form-control" type="text" style="width: 300px" name="phone" required="required" id="phone" />
            </div>
        </div>

        <div class="form-group" >
            <div class="col-md-offset-2">
                <input type="submit" class="btn btn-default" name="dangky" value="Register" />
            </div>
        </div>
    }
    </div>